---
import Layout from "./Layout.astro";
import { slugify, formatDate } from "../scripts/index";

const { frontmatter } = Astro.props;
const { title, description, date, category, author } = frontmatter;
---

<Layout title={title}>
  <main class="flex flex-col py-2 px-2 md:px-16 xl:px-32 gap-16">
    <article class="max-w-2xl flex flex-col gap-[16px]">
      <section class="flex flex-col gap-[8px]">
        <p class="text-[#707070]">{category}</p>
        <h1 class="text-[42px] font-[600]">{title}</h1>
        <h2 class="text-[24px] text-[#707070]">{description}</h2>
        <p class="text-[20px]">
          by <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢  {
            formatDate(date)
          }
        </p>
      </section>
      <hr>
      <section class="flex flex-col gap-[8px] text-[20px] font-serif">
        <slot />
      </section>
    </article>
  </main>
</Layout>
